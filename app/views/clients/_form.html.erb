<% if @client.errors.any? %>
  <% @client.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<% if current_user.admin? %>
  <%= form_for (client) do |f| %>
    <%= f.label :name, 'Nome' %>
    <%= f.text_field :name %>
    <%= f.label :document, 'CPF' %>
    <%= f.text_field :document %>
    <%= f.label :email, 'Email' %>
    <%= f.text_field :email %>
    <%= f.submit 'Enviar' %>
  <% end %>
<% end %>